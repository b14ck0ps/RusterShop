<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light ">
        <div class="container-fluid d-flex justify-content-center w-auto">
            <a class="navbar-brand" href="/">Ruster Shop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/Order">Orders</a>
                    </li>
                    <li class="nav-item">
                        <a href="/cart" class="nav-link active position-relative">
                            Cart
                            @if (Session["CartCount"] != null && (int)Session["CartCount"] > 0)
                            {
                                <span class="position-absolute top-3 start-100 translate-middle badge rounded-pill bg-danger">
                                    @Session["CartCount"]
                                    <span class="visually-hidden">unread messages</span>
                                </span>
                            }
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <div class="main-content">
            <div style="margin:50px 0 auto 0">
                @RenderBody()
            </div>
            <footer style="margin:0">
                <hr />
                <p>&copy; @DateTime.Now.Year - Ajran Hossain</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
    body {
        padding: 0;
    }

    .main-content {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 90vh;
    }

    .nav-pi {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>